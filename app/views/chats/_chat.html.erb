<div id="chat-<%= chat.id %>">
  <% if chat.user == current_user %>
    <div class="current_user_chat chat-box">
      <small>
        <p><%= chat.created_at.strftime("%a %b %e at %l:%M %p") %></p>
      </small>
      <p><%= chat.content %></p>
    </div>
  <% else %>
    <div class="other-chatbox">
      <% if current_user == @chatroom.other_user %>
<% if @chatroom.user.photo.attached? %>
<%= cl_image_tag @chatroom.user.photo.photo.key, class: "avatar avatar-nav" %>
<% else %>
<img src="https://res.cloudinary.com/dhvssfzz1/image/upload/v1693474293/avatar-_mtc5tf.jpg" class="avatar avatar-nav" alt= "dropdown menu">
<% end%>
      <% else %>
          <% if @chatroom.other_user.photo.attached? %>
            <%= cl_image_tag @chatroom.other_user.photo.key, class: "avatar avatar-nav" %>
          <% else %>
            <img class="avatar avatar-nav" src="https://res.cloudinary.com/dhvssfzz1/image/upload/v1693474293/avatar-_mtc5tf.jpg" alt="">
          <% end %>
      <% end %>
      <div class="other_user_chat chat-box">
        <small>
          <p><%= chat.created_at.strftime("%a %b %e at %l:%M %p") %></p>
        </small>
        <p><%= chat.content %></p>
      </div>
    </div>
  <% end %>
</div>
