<h1>Modifie ta demande de visite !</h1>
  <div class="containernewvisit">
    <div class="row">
        <%= simple_form_for [@visit_form], html: { class: 'visit-form' } do |f| %>
          <p><%= f.object.title%></p>
          <p><%= f.object.url%></p>
          <p><%= f.object.rooms_number%></p>
          <p><%= f.object.address%></p>
          <p><%= f.object.description%></p>
          <%= f.input :date, label: "Date de la visite"%>
          <div id="criteres">
            <%= f.simple_fields_for :criteres do |critere|%>
              <%= render 'critere_fields', f: critere, visit_form_user: @visit_form_user %>
            <%end%>
            <div class="links">
              <%= link_to_add_association 'Ajouter un critÃ¨re', f, :criteres%>
            </div>
            <%= f.simple_fields_for :rooms do |room|%>
              <%= render 'room_fields', f: room %>
          <%end%>
          <%= f.button :submit, 'Ajouter la visite', class: 'btn-submit' %>
        <% end %>
    </div>
  </div>

